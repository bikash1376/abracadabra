<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 p-10 text-black">
      <div class="nav mb-10">
        <a class="text-blue-500" href="/">Back to Home</a>
      </div>
      <h1 class="text-3xl tracking-tighter text-white mb-6">All Users</h1>

      <div class="users flex gap-3 flex-wrap">
        <% users.forEach(function(user) {%>

        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
          <div class="w-full h-72 rounded-lg bg-zinc-600 ">
            <img
              class="w-full h-full object-cover object-center rounded-lg"
              src="<%= user.image %>"
              alt=""
            />
          </div>
          <h3 class="text-3xl mt-4 tracking-tighter text-white">
            <%= user.name %>
          </h3>
          <h5 class="text-gray-300 mt-2"><%= user.email %></h5>
          <div class="flex gap-3 mt-8">
            <a class="text-gray-300" href="/edit/<%= user._id %>">Edit User</a>
            <a class="text-red-400" href="/delete/<%= user._id %>">Delete User</a>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
